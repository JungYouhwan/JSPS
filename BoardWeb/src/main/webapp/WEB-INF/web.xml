<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>BoardWeb</display-name>
	<!-- apache.tiles 타일즈는 서블릿보다 앞에 있어야함. -->
	<listener>
		<listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
	</listener>
	<!-- 타일즈 서블릿을 실행시키도록 만듬. -->
	<servlet>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
	</servlet>
	<!-- tiles페이지를 열경우 위에 서블릿으로 실행이되도록 함. -->
	<servlet-mapping>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<url-pattern>*.tiles</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>front</servlet-name>
		<servlet-class>com.yedam.FrontController</servlet-class>
	</servlet>
	<!-- tiles페이지를 열경우 위에 서블릿으로 실행이되도록 함. -->
	<servlet-mapping>
		<servlet-name>front</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- 서블릿과 url pattern지정. (서블릿에 대한 정의) -->
	<servlet>
		<servlet-name>sample</servlet-name>
		<servlet-class>com.yedam.SampleServlet</servlet-class>
	</servlet>

	<!-- 서블릿 호출 url /sample를 치면 서블릿을 실행시킨다는 뜻. -->
	<servlet-mapping>
		<servlet-name>sample</servlet-name>
		<url-pattern>/sample</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<!-- 웹페이지 최초 실행설정하는곳. -->
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>